<!DOCTYPE html>
<html>
  <head>
    <%= render_partial "plain_head.html", assigns %>
  </head>

  <body>
    <div class="uttermost__container">
      <div class="uttermost__overlay"></div>

      <!-- logo/trendingbox -->
      <section class="layer_one">
          <%= render_partial "navbar_logo.html", assigns %>        
          <%= render_partial "navbar_menu.html", assigns %>        
      </section>
      
      <!-- main/sidebar -->
      <section class="layer_four">
        <%= render @view_module, @view_template, assigns %>
      </section>

      <!-- footer -->
      <section class="layer_five">
        <%= render_partial "general_footer.html", assigns %>        
      </section>
    </div>    
    <script src="<%= static_path(@conn, "/js/vendor.js")%>"></script>        
    <script src="<%= static_path(@conn, "/js/app.js")%>"></script>
  </body>
</html>
